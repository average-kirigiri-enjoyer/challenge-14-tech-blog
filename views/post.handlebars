<div class = "view-post-container container">

  <div class = "view-post-content column">

    {{> post-details}}
    
  </div>
</div>

{{#if logged_in}}

  <div class = "create-comment-container container">
    
    <h2>Comment</h2>
    <textarea class = "create-comment-text"></textarea>
    <button class = "add-comment-button">Comment</button>

  </div>

  <script src = "/js/create-comment.js"></script>

{{/if}}

<div class = "comment-list-container container">

  {{#each comments as |comment|}}
    {{> comment-details}}
  {{/each}}

</div>